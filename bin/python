#!/usr/bin/env bash

export PATH="${PATH#"$MY_OPT_DIR/bin:"}"
export PATH="${PATH/":$MY_OPT_DIR/bin:"/:}"
export PATH="${PATH%":$MY_OPT_DIR/bin"}"

if [ "$PATH" = "$MY_OPT_DIR/bin" ]; then
	echo "Error: PATH would be empty after removing '$MY_OPT_DIR/bin'"
	echo "PATH='$PATH'"
	exit 1
fi

PYTHON="${0##*/}"
PYTHON="$(which $PYTHON 2> /dev/null)"

if [ -z "$PYTHON" ]; then
	echo "${0##*/} was not found in PATH='$PATH'"
	exit 1
fi

if [ "$0" = "$PYTHON" ]; then
	echo "Error: Infinite loop detected."
	echo "Are there links to '$MY_OPT_DIR/bin' still in PATH?"
	echo "PATH='$PATH'"
	exit 1
fi

python_var_name () {
	$1 -V 2>&1 | sed 's/^Python \([0-9][0-9]*\)\.\([0-9][0-9]*\)\..*$/MY_PYTHON\1\2_PATH/'
}

PYTHONPATH_VAR="$(python_var_name "$PYTHON")"
export PYTHONPATH="${!PYTHONPATH_VAR}"
export PATH="$MY_OPT_DIR/bin:$PATH"

"$PYTHON" "$@"
